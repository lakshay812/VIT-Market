  <%- include("../partials/header")%>
  <link rel="stylesheet" href="/css/home.css" />

  <body>
  
    <%-include("../partials/navbar")%>
    <!-- <hr> -->

    <section
      id="contact"
      style="background-color: white; margin-top: 100px"
      class="container"
    >
      <h1
        class="contact-head container"
        style="
          background-color: rgb(213, 213, 106);
          margin-bottom: 0;
          border-top-right-radius: 25px;
          border-top-left-radius: 25px;
        "
      >
        Add Product
      </h1>
      <div
        id="contact-box"
        style="
          border-bottom-right-radius: 25px;
          border-bottom-left-radius: 25px;
        "
      >
        <form method="post" action="/products" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name: </label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Enter your name"
            />
          </div>
          
          <div class="form-group">
            <label for="price">Price: </label>
            <input
              type="price"
              name="price"
              id="price"
              placeholder="Enter the price of the Product (in Rs) "
            />
          </div>

          <div class="form-group">
            <label for="photo">Picture of the Product: </label>
            <input type="file" name="img" id="photo"  placeholder="Image of the Product" accept="image/*"/>
          </div>
          <div class="form-group">
            <label for="selectOptions">Select an option:</label>
            <select id="selectOptions" name="type">
              <option value="FoodItems">Food Item</option>
              <option value="Books">Book</option>
              <option value="Cycles">Cycle</option>
              <option value="Others">Others</option>

              <!-- Add more options as needed -->
            </select>
          </div>
          

          <div class="form-group">
            <label for="desc">Description: </label>
            <textarea
              name="desc"
              id="desc"
              cols="30"
              rows="10"
            ></textarea>
          </div>

          <br />
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <button
              style="
                background-color: rgb(212, 216, 209);
                color: black;
                font-weight: bold;
                box-shadow: 3px 3px red;
                border: 2px solid black;
                border-radius: 12px;
                font-family: cursive;
                padding: 10px;
              "
              class="btn btn-primary"
              type="submit"
              value="upload"
            >
              SUBMIT
            </button>
          </div>
        </form>
      </div>
    </section>
    <%-include('../partials/footer')%>
    <script>
      // Limit file size to 1 MB
      document.getElementById('photo').addEventListener('change', function() {
        const file = this.files[0];
        const fileSize = file.size / (1024*1024); // in MB
        if (fileSize > 100) {
          alert('File size exceeds the limit of 100kb. Please choose a smaller file.');
          this.value = ''; // Clear the file input
        }
      });
    </script>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>  
</html>
